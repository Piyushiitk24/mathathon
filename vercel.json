{
  "version": 2,
  "builds": [
    { "src": "server/api/index.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "client/build" } }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "server/api/index.js" },
    { "src": "^/(.*)\\.(js|css|png|jpg|jpeg|gif|svg|ico|txt|woff2|woff|ttf)$", "dest": "client/build/$1.$2" },
    { "src": ".*", "dest": "client/build/index.html" }
  ]
}
